<div class="container-xxl flex-grow-1 container-p-y">
  <h4 class="fw-bold py-3 mb-4">
    <span class="text-muted fw-light">Quản Lý /</span>
    Tour
  </h4>

  <!-- Basic Layout -->
  <div class="row">
    <div class="col-xl">
      <div class="card mb-4">
        <div
          class="card-header d-flex justify-content-between align-items-center"
        >
          <h5 class="mb-0">Núi Phú Sĩ - Hokkado - Akihabara</h5>
          <small class="text-muted float-end">Chỉnh Sửa</small>
        </div>
        <div class="card-body">
          <form method="get" action="/tour">
            <div class="mb-3">
              <label class="form-label" for="basic-icon-default-fullname">Tên
                Tour</label>
              <div class="input-group">
                <span class="input-group-text" id="basic-addon11">@</span>
                <input
                  name="ten"
                  type="text"
                  class="form-control"
                  placeholder="Núi Phú Sĩ - Hokkado - Akihabara"
                  aria-describedby="basic-addon11"
                />
              </div>
            </div>
            <div class="mb-3">
              <label class="form-label" for="basic-icon-default-fullname">Ngày
                Khởi Hành</label>
              <div class="input-group input-group-merge">
                <span
                  id="basic-icon-default-fullname2"
                  class="input-group-text"
                ><i class="bx bxs-plane-take-off"></i></span>
                <input
                  name="khoi_hanh"
                  class="form-control"
                  type="date"
                  value="2021-06-18"
                  id="html5-date-input"
                />
              </div>
            </div>
            <div class="mb-3">
              <label class="form-label" for="basic-icon-default-company">Thời
                Gian Du Lịch</label>
              <div class="input-group input-group-merge">
                <span
                  id="basic-icon-default-company2"
                  class="input-group-text"
                ><i class="bx bx-time"></i></span>
                <input
                  name="so_ngay"
                  class="form-control"
                  type="number"
                  value="10"
                  id="html5-number-input"
                />
              </div>
            </div>
            <div class="mb-3">
              <label class="form-label" for="basic-icon-default-email">Tổng Số
                Ghế</label>
              <div class="input-group input-group-merge">
                <span class="input-group-text"><i
                    class="bx bx-chair"
                  ></i></span>
                <input
                  name="so_cho"
                  class="form-control"
                  type="number"
                  value="18"
                  id="html5-number-input"
                />
              </div>
            </div>
            <div class="mb-3">
              <label class="form-label" for="defaultSelect">Người Hướng Dẫn</label>
              <div class="input-group input-group-merge">
                <span class="input-group-text"><i
                    class="bx bx-user-voice"
                  ></i></span>
                <select name="nguoi_hd" id="defaultSelect" class="form-select">
                  <option>Chọn Người Hướng Dẫn</option>
                  <option value="1">One</option>
                  <option value="2">Two</option>
                  <option value="3">Three</option>
                </select>
              </div>
            </div>
            <div class="mb-3">
              <label class="form-label" for="basic-icon-default-message">Giá Vé</label>
              <div class="input-group input-group-merge">
                <span class="input-group-text"><i
                    class="bx bx-purchase-tag-alt"
                  ></i>VND
                </span>
                <input
                  name="gia"
                  type="text"
                  class="form-control"
                  placeholder="10000000"
                  aria-label="Amount (to the nearest dollar)"
                />
                <span class="input-group-text">.00</span>
              </div>
            </div>
            <button type="submit" class="btn btn-primary">
              Lưu
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>